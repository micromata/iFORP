{
  "extends": [
    "baumeister",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "PRODUCTION": false,
    "API_HOST": false
  },
  "overrides": [
    {
      "files": ["build/*.js"],
      "rules": {
        "no-console": "off",
        "unicorn/no-process-exit": "off"
      }
    }
  ]
}
